<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        xmlns:Controller="clr-namespace:Controller;assembly=Controller" x:Class="WPFApp.Window2"
        mc:Ignorable="d"
        Title="Competition Info" Height="450" Width="800" Closing="OnClosing">
    <Window.DataContext>
        <Controller:DataContext_Window2/>
    </Window.DataContext>
    <Grid>
        <Image Source="/Graphics/Podium.png" Stretch="Fill" />
        <Label x:Name="WinnaarText" Content="{Binding WinnerText}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="85" Width="724" FontSize="30" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,10,0,0"/>
        <Image Source="{Binding WinnerURL}" HorizontalAlignment="Left" Height="147" Margin="330,100,0,0" VerticalAlignment="Top" Width="147"/>
    </Grid>
</Window>
